Devise.setup do |config|
  # config.omniauth :github 'APP_ID', 'APP_SECRET', :scope => 'user,public_repo'

   config.omniauth :ldap,
     :title => '<%= ldap_title %>',
     :host => '<%= ldap_host %>',
     :base => '<%= ldap_base %>',
     :uid => '<%= ldap_uid %>',
     :port => <%= ldap_port %>,
     :method => :<%= ldap_method %>
     <% if ldap_bind_dn != '' -%>,
     :bind_dn => '<%= ldap_bind_dn %>',
     :password => '<%= ldap_bind_password %>'
     <% end -%>
end
