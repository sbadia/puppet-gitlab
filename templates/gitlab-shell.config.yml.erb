# GitLab user. git by default
user: <%= @git_user %>

# Url to gitlab instance. Used for api calls. Should be ends with slash.
gitlab_url: "<%= @gitlab_ssl ? 'https' : 'http' %>://<%= @gitlab_domain %>/"

http_settings:
#  user: someone
#  password: somepass
  self_signed_cert: <%= @gitlab_ssl_self_signed %>

# Repositories path
repos_path: "<%= @gitlab_repos_path %>"

# File used as authorized_keys for gitlab user
auth_file: "<%= @git_home %>/.ssh/authorized_keys"
