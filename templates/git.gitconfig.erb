[user]
  name = "GitLab"
  email = <%= @git_email %>

[core]
  editor = vim
  autocrlf = input

[color]
  ui = true
  log = auto
  branch = auto
  diff = auto
  status = auto

[alias]
  br = branch
  st = status
  ch = checkout
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
